{
  "root": true,
  "extends": [
    "plugin:react/recommended",
    "plugin:react/jsx-runtime",
    "standard"
  ],
  "plugins": [
    "react"
  ],
  "rules": {
    "react/prop-types": "off",
    "react/jsx-indent": ["error", 2, {
      "checkAttributes": true,
      "indentLogicalExpressions": true
    }],
    "react/no-unescaped-entities": ["error", {
      "forbid": [{
        "char": ">",
        "alternatives": ["&gt;"]
      }, {
        "char": "}",
        "alternatives": ["&#125;"]
      }]
    }],
    "multiline-ternary": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "env": {
    "browser": true
  }
}
